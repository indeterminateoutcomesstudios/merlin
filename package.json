{
  "name": "deeMemory",
  "productName": "DeeMemory",
  "version": "1.0.0",
  "description": "A tool to help a Dungeon Master",
  "license": "MIT",
  "repository": "user/repo",
  "author": {
    "name": "Marco Zanini",
    "email": "chetto87+deeMemory@gmail.com",
    "url": "http://www.marcozanini.it"
  },
  "build": {
    "appId": "deeMemory.id",
    "linux": {
      "target": "pacman"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "scripts": {
    "postinstall": "install-app-deps",
    "test": "jest --verbose",
    "start": "electron .",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "pack": "build --dir",
    "dist": "build",
    "distWin": "build --win",
    "dev": "webpack --config build/webpack.config.js --progress --colors --watch"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "electron-debug": "^1.0.0",
    "electron-settings": "^3.0.10",
    "jquery": "^3.1.1",
    "json2csv": "^3.11.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "devtron": "^1.1.0",
    "electron": "^1.4.15",
    "electron-builder": "^16.6.1",
    "electron-packager": "^8.5.1",
    "electron-react-devtools": "^0.4.0",
    "jest": "^19.0.2",
    "readline": "^1.3.0",
    "webpack": "^1.14.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
