{
  "name": "deeMemory",
  "productName": "DeeMemory",
  "version": "1.0.0",
  "description": "A tool to help a Dungeon Master",
  "license": "MIT",
  "repository": "user/repo",
  "author": {
    "name": "Marco Zanini",
    "email": "chetto87+deeMemory@gmail.com",
    "url": "http://www.marcozanini.it"
  },
  "main": "app/background.js",
  "build": {
    "appId": "deeMemory.id",
    "linux": {
      "target": "pacman"
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "scripts": {
    "postinstall": "install-app-deps",
    "unit": "jest --verbose",
    "start": "electron .",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "pack": "build --dir",
    "dist": "build",
    "distWin": "build --win",
    "dev": "webpack --config build/webpack.config.js --progress --colors --watch",
    "test": "mocha -w test/helpers/browser.js test/*.spec.js",
    "dev:hot": "webpack-dev-server --config build/webpack.test.config.js --hot --inline --progress --colors --watch --content-base ./"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "chance": "^1.0.13",
    "electron-debug": "^1.4.0",
    "electron-settings": "^3.1.4",
    "jquery": "^3.1.1",
    "json2csv": "^3.11.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "devtron": "^1.1.0",
    "electron": "^1.7.10",
    "electron-builder": "^16.6.1",
    "electron-packager": "^8.5.1",
    "electron-react-devtools": "^0.5.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.0.4",
    "jsdom": "^11.5.1",
    "mocha": "^4.1.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.2.0",
    "readline": "^1.3.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
